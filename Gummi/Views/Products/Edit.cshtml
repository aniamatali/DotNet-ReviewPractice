@model Gummi.Models.Product

@{
    ViewData["Title"] = "Product - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
body {
background-image:url("/images/background.jpg");
}
.container {
  margin-top:1%;
  margin-bottom:1%;
}
#everything {
  opacity:1;
}
.contentbackground {
  background-color:black;
  color:white;
  padding-left:15px;
  padding-right:15px;
  padding-top:30px;
  padding-bottom:30px;
  border-left:2px solid black;
  border-right:2px solid black;
  border-bottom:2px solid black;
  font-family: 'Roboto', sans-serif;
  height:90%;
    opacity:.95;
}
.contentbackground h1 {
  text-align:center;
  font-family: 'Questrial', sans-serif;
}
.contentbackground h3 {
  margin-top:10px;
  font-family: 'Questrial', sans-serif;
}
.navbar {
  font-family: 'Squada One', cursive;
  font-size:30px;
  border-bottom:1px solid silver;
  padding-bottom:0px;
  border-top-left-radius:90%;
  text-shadow: 9px 12px 25px black;
}
.navbar li {
  margin-left:18px;
}
th {
    font-family: 'Arial';
}
td {
    font-family: 'Questrial', sans-serif;
    font-size:20px;
}
#gbk {
  color:#bbe3ed;
  -webkit-text-stroke: 3px black;
  font-size:45px;
  margin-left:30px;
  font-family: 'Kanit', sans-serif;
  text-shadow: 9px 12px 25px black;
}
.deletelink a{
  color:red;
}
.navbar-nav {
  margin-left:50%;
}
.cellright {
  text-align:right;
}
.navbacker {
  background-color:white;
  border-top-left-radius:90px;
  opacity:.96;
}
p {
  font-size:22px;
  font-family: 'Assistant', sans-serif;
}


select {
  margin-top:5px;
}

</style>

<div class="contentbackground">

@using (Html.BeginForm())
{
  <div class="card bg-dark">
  <div class="card-header bg-primary">
    <h4>Edit this Product: @Html.DisplayFor(model => model.Description)</h4>
    @Html.HiddenFor(model => model.ProductId)
    </div>
    <div class="card-body">
    <table class="table table-hover table-dark">
    <tr>
    <th>@Html.LabelFor(model => model.Description)</th>
    <td>@Html.EditorFor(model => model.Description)</td>
    </tr>
    <tr>
    <th>@Html.LabelFor(model => model.Price)</th>
    <td>@Html.EditorFor(model => model.Price)</td>
    </tr>
    <tr>
    <th>@Html.LabelFor(model => model.Category)</th>
    <td>@Html.DropDownList("CategoryId")</td>
    </tr>
    <tr>
    <th>@Html.LabelFor(model => model.ProductInfo)</th>
    <td>@Html.EditorFor(model => model.ProductInfo)</td>
    </tr>
    <tr>
    <th>@Html.LabelFor(model => model.UserName)</th>
    <td>@Html.EditorFor(model => model.UserName)</td>
    </tr>
    <tr>
    <th>@Html.LabelFor(model => model.UserReview)</th>
    <td>@Html.EditorFor(model => model.UserReview)</td>
    </tr>
    </table>
    </div>
    <div class="card-footer">
    <input type="submit" value="Save" class="btn btn-default" />
    </div>
    </div>
}
@Html.ActionLink("Back to List", "Index")
</div>
