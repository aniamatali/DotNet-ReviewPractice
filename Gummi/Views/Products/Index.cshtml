@model IEnumerable<Gummi.Models.Product>

@{
    ViewData["Title"] = "Product";

}
<div class="contentbackground">
<h3>Inventory</h3>
<table class="table table-sm table-hover table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Information
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var listProduct in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelProduct => listProduct.Description)
            </td>
            <td>
                @Html.DisplayFor(model => listProduct.ProductInfo)
            </td>
            <td>
                $@Html.DisplayFor(modelProduct => listProduct.Price)
            </td>
            <td class="cellright">
                @Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductId }) |
                @Html.ActionLink("Details", "Details", new { id = listProduct.ProductId }) |
                <span class="deletelink"><a>
                @Html.ActionLink("Delete", "Delete", new { id = listProduct.ProductId })
                </a></span>
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Add Inventory", "Create")
</p>
</div>
